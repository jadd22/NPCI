<!DOCTYPE html>
<html>


<% include layouts/head.ejs %>

    <body>
        <% include layouts/sidebar.ejs %>
            <div class="main-panel">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar bar1"></span>
                                <span class="icon-bar bar2"></span>
                                <span class="icon-bar bar3"></span>
                            </button>
                            <a class="navbar-brand" href="#">Payment</a>
                        </div>
                    </div>
                </nav>

                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div style="margin-left: 200px;margin-right: 200px">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Payment</h4>
                                    </div>
                                    <div class="content">
                                        <form method="POST" action="/transfer">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Sender Address</label>
                                                        <input type="text"  id="from" name="from" class="form-control border-input" placeholder="9874561230">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Receiver Address</label>
                                                        <input type="text"  id="to" name="to" class="form-control border-input" placeholder="9874561230">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Amount</label>
                                                        <input type="text" id="amount" name="amount" class="form-control border-input" placeholder="Enter amount to transfer">
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="text-center">
                                                <button type="submit" class="btn btn-info btn-fill btn-wd" onclick="return chechNumber();">Send</button>
                                            </div>
                                            <div class="clearfix"></div>

                                
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>

</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>